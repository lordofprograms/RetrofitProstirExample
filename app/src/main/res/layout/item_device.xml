<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_acc"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_view_height"
        android:layout_margin="@dimen/margin_16"
        app:cardCornerRadius="@dimen/margin_16"
        android:elevation="@dimen/elevation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/device_type_iv"
                android:layout_width="@dimen/device_iv_size"
                android:layout_height="@dimen/device_iv_size"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginBottom="@dimen/dp20" />

            <TextView
                android:id="@+id/device_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/device_type_iv"
                android:layout_centerHorizontal="true"
                android:text="@string/sample_phone_name"
                android:textColor="@android:color/black"
                android:textSize="@dimen/size_20" />

            <TextView
                android:id="@+id/device_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/device_tv"
                android:layout_below="@+id/device_tv"
                android:text="@string/sample_date"
                android:textColor="@color/colorTextSecondary"
                android:textSize="@dimen/size_18" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>